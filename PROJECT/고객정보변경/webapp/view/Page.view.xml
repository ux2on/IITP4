<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" height="100%" controllerName="sap.study.zc06Proj001.controller.Page"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page id="page" showHeader="true">
				<content></content>
				<headerContent>
					<Button xmlns="sap.m" id="edit" icon="sap-icon://edit" press="handleEditPress"/>
					<Button id="save" text="변경 신청" type="Emphasized" visible="false" press="handleSavePress"/>
					<Button id="cancel" text="되돌아 가기" visible="false" press="handleCancelPress"/>
				</headerContent>
			</Page>
		</pages>
	</App>
	<html:div id="layer" style="display:none;position:fixed;overflow:hidden;z-index:1;-webkit-overflow-scrolling:touch;">
		<html:img src="//t1.daumcdn.net/postcode/resource/images/close.png" id="btnCloseLayer" style="cursor:pointer;position:absolute;right:100px;top:100px;z-index:1" onclick="closeDaumPostcode()" alt="닫기 버튼"/>
	</html:div>
</mvc:View>